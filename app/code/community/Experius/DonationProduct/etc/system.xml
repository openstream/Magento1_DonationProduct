<?xml version="1.0"?>
<config>
    <tabs>
        <experius_donation translate="label" module="donationproduct">
            <label>Experius Donation</label>
            <sort_order>0</sort_order>
        </experius_donation>
    </tabs>
    <sections>
        <donation_product translate="label" module="donationproduct">
            <label>Donation Product</label>
            <tab>experius_donation</tab>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Settings</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label,comment">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <min_amount translate="label,comment">
                            <label>Minimal Donation Amount</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <validate>validate-number validate-number-range number-range-0.01-100000</validate>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </min_amount>
                        <max_amount translate="label,comment">
                            <label>Maximal Donation Amount</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <validate>validate-number validate-number-range number-range-0.01-100000</validate>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </max_amount>
                        <fixed_amount translate="label,comment">
                            <label>Fixed Donation Amounts</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Comma-separated.]]></comment>
                        </fixed_amount>
                    </fields>
                </settings>
                <layout translate="label">
                    <label>Layout</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <show_in_sidebar translate="label,comment">
                            <label>Show in Sidebar</label>
                            <comment><![CDATA[]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_in_sidebar>
                        <sidebar_title translate="label,comment">
                            <label>Sidebar Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sidebar_title>
                        <sidebar_text translate="label,comment">
                            <label>Sidebar Text</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sidebar_text>
                        <show_in_cart translate="label,comment">
                            <label>Show in Cart</label>
                            <comment><![CDATA[]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_in_cart>
                        <cart_title translate="label,comment">
                            <label>Cart Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cart_title>
                        <cart_text translate="label,comment">
                            <label>Cart Text</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cart_text>
                    </fields>
                </layout>
            </groups>
        </donation_product>
    </sections>
</config>
