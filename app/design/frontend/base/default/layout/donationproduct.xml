<?xml version="1.0"?>
<layout version="0.1.0">

    <default>
        <reference name="head">
            <action method="addCss" ifconfig="donation_product/layout/show_in_sidebar">
                <stylesheet>css/donationproduct/widget.css</stylesheet>
            </action>
        </reference>
        <reference name="right">
            <block type="donationproduct/sidebar" name="sidebar.right.donationproduct" after="-" template="donationproduct/widget.phtml"/>
        </reference>
        <reference name="left">
            <block type="donationproduct/sidebar" name="sidebar.left.donationproduct" after="-" template="donationproduct/widget.phtml" />
        </reference>
    </default>

    <checkout_cart_index>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/jquery.fancybox.min.js</name></action>
            <action method="addCss" ifconfig="donation_product/layout/show_in_cart">
                <stylesheet>css/donationproduct/widget.css</stylesheet>
            </action>
        </reference>
        <reference name="content">
            <block type="donationproduct/cart" name="donation.product" template="donationproduct/widget.phtml" />
        </reference>
    </checkout_cart_index>

    <PRODUCT_TYPE_donation translate="label" module="donationProduct">
        <label>Catalog Product View (Donation)</label>
        <reference name="head">
            <action method="addCss"><stylesheet>css/donationproduct/product_page.css</stylesheet></action>
        </reference>
        <reference name="root">
            <action method="addBodyClass"><classname>catalog-product-view-donation</classname></action>
        </reference>
        <reference name="product.info">
            <block type="donationproduct/catalog_product_options" name="product.info.donation" as="product_type_data" template="donationproduct/catalog/product/view/type/options/donation.phtml"/>
        </reference>
    </PRODUCT_TYPE_donation>

</layout>

